{
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 300,
        "tabWidth": 1,
        "useTabs": true,
        "endOfLine": "auto",
        "trailingComma": "none",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "ignore",
        "proseWrap": "never"
      }
    }
  ]
}
